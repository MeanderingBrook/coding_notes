extends layout 

block content 

  h1 #{title}: #{author.name}
  p= author.date_joined

  if author_notes.length 

    p #[strong Delete the following Notes before attempting to Delete this Author.]
      div(style='margin-left:20px;margin-top:20px')
        h4 Notes 
        dl 
          each note in author_notes
            dt 
              a(href=note.url) #{note.title}
            dd #{note.summary}

  else 
    p Do you wish to Delete this Author? This action cannot be undone

    form(method='POST')
      div.form-group
        input#authorid.form-control(type='hidden', name='authorid', value=author._id)
      
      button.btn.btn-primary(type='submit') Delete
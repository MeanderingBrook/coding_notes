extends layout 

block content 

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Language: 
      input#name.form-control(type='text', placeholder='JavaScript, C++, HTML, etc.', name='name', required value=(undefined===language ? '' : language.name))
      label(for='description') Description:
      input#description.form-control(type='text', name='description', required value=(undefined===language ? '' : language.description))
    button.btn.btn-primary(type='submit') Submit
  
  if errors 
    ul 
      for error in errors 
        li!= error.msg
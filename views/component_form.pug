extends layout 

block content 

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Component:
      input#name.form-control(type='text', placeholder='Controllers, Routes, Error Handling, etc.' name='name' required value=(undefined===component ? '' : component.name))
      label(for='description') Description:
      input#description.form-control(type='text', name='description' required value=(undefined===component ? '' : component.description))
    button.btn.btn-primary(type='submit') Submit
    
  if errors 
    ul 
      for error in errors 
        li!= error.msg
